<Page x:Class="UvvFintech.View.ClienteLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UvvFintech.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login Cliente">

    <Grid>
        <Label x:Name="titulo1" Content="Sistema Bancário" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="36" FontFamily="Bahnschrift SemiBold SemiCondensed"/>
        <TextBox x:Name="cpfTextBox" HorizontalAlignment="Center" Margin="0,182,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="256" AcceptsReturn="True" MaxLength="11"/>
        <Label Content="CPF:" HorizontalAlignment="Left" Margin="239,178,0,0" VerticalAlignment="Top"/>
        <Label Content="Senha:" HorizontalAlignment="Left" Margin="227,213,0,0" VerticalAlignment="Top"/>
        <Label Content="Dados do Cliente:" HorizontalAlignment="Center" Margin="0,128,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="22"/>
        <PasswordBox x:Name="senhaPasswordBox" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Width="256"/>
        <Button x:Name="logarButton" Content="Login" HorizontalAlignment="Left" Margin="433,294,0,0" VerticalAlignment="Top" AutomationProperties.IsRequiredForForm="True" Height="20" Width="64" Click="logarButton_Click"/>
        <Button x:Name="cadastrarButton" Content="Cadastrar" HorizontalAlignment="Left" Margin="298,294,0,0" VerticalAlignment="Top" Width="65" Height="20"/>
    </Grid>
</Page>

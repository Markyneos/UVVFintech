<Page x:Class="UvvFintech.View.TransacoesCorrente"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UvvFintech.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TransacoesCorrente">

    <Grid Background="White">
        <Label x:Name="titulo7" Content="Transações" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="36" FontFamily="Bahnschrift SemiBold SemiCondensed"/>
        <DataGrid x:Name="dataGridTransacoes" AutoGenerateColumns="True" Margin="10,63,10,130"/>
        <Button x:Name="sacarButton" Content="Sacar" HorizontalAlignment="Left" Margin="180,379,0,0" VerticalAlignment="Top" Width="65" Click="sacarButton_Click"/>
        <Button x:Name="depositarButton" Content="Depositar" HorizontalAlignment="Left" Margin="550,379,0,0" VerticalAlignment="Top" Width="65" Click="depositarButton_Click"/>
        <Button x:Name="transferenciaButton" Content="Transferir" HorizontalAlignment="Center" Margin="0,379,0,0" VerticalAlignment="Top" Width="65" Click="transferenciaButton_Click"/>
        <Button x:Name="voltarButton" Content="Voltar" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="45" Click="voltarButton_Click"/>

    </Grid>
</Page>

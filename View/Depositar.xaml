<Page x:Class="UvvFintech.View.Depositar"
      xmlns:currency="clr-namespace:CurrencyTextBoxControl;assembly=CurrencyTextbox"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UvvFintech.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Depositar">

    <Grid Background="White">
        <Label x:Name="titulo9" Content="Depositar" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="36" FontFamily="Bahnschrift SemiBold SemiCondensed"/>
        <Label Content="Insira o valor que deseja depositar:" HorizontalAlignment="Center" Margin="0,128,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="22"/>
        <currency:CurrencyTextBox x:Name="valorBox" Number="{Binding Number}" HorizontalAlignment="Left" Margin="284,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="271" TextAlignment="Left" MaximumValue="50000" MinimumValue="0.01" Text=""/>
        <Label Content="Valor:" HorizontalAlignment="Left" Margin="245,0,0,0" VerticalAlignment="Center"/>
        <Button x:Name="prosseguirButton" Content="Prosseguir" HorizontalAlignment="Center" Margin="0,303,0,0" VerticalAlignment="Top" Width="83" Click="prosseguirButton_Click"/>
        <Button x:Name="voltarButton" Content="Voltar" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="45" Click="voltarButton_Click"/>
    </Grid>
</Page>

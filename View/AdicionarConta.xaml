<Page x:Class="UvvFintech.View.AdicionarConta"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UvvFintech.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdicionarConta">

    <Grid Background="White">
        <Label x:Name="titulo4" Content="Adicionar Conta" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="36" FontFamily="Bahnschrift SemiBold SemiCondensed"/>
        <ComboBox x:Name="tipoDeContaBox" HorizontalAlignment="Left" Margin="388,190,0,0" VerticalAlignment="Top" Width="120" IsReadOnly="True">
            <ComboBoxItem Content="Conta Corrente"/>
            <ComboBoxItem Content="Conta Poupança"/>
        </ComboBox>
        <Label Content="Tipo de conta:" HorizontalAlignment="Left" Margin="303,186,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="senhaBox" HorizontalAlignment="Left" Margin="346,229,0,0" VerticalAlignment="Top" Width="162"/>
        <Label Content="Senha:" HorizontalAlignment="Left" Margin="303,225,0,0" VerticalAlignment="Top"/>
        <Button x:Name="adicionarContaButton" Content="Criar Conta" HorizontalAlignment="Center" Margin="0,272,0,0" VerticalAlignment="Top" Width="74" Click="adicionarContaButton_Click"/>
        <Button x:Name="voltarButton" Content="Voltar" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="43" Click="voltarButton_Click"/>

    </Grid>
</Page>
